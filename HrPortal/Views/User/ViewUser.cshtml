    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: "/User/GetUsers",
                success: function (data) {
                    bindCustomersInDataTable(data);
                }
            });

            //show popup
            $("#btnadddepartment").click(function () {
                //$.post("/Customer/AddCustomer", function (data) {
